doctype html
html
  head
    title Registro de Periodos
    meta(charset='utf-8')
    link(rel='icon', href='./img/favicon.jpg', type='image/jpg')
    link(rel='stylesheet', href='./css/bootstrap.min.css')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')
    link(rel='stylesheet', href='./css/misestilos.css')
    link(href='https://fonts.googleapis.com/css?family=Marcellus+SC', rel='stylesheet')
    link(href='https://fonts.googleapis.com/css?family=Chicle', rel='stylesheet')
    link(href='https://fonts.googleapis.com/css?family=Amatic+SC', rel='stylesheet')
  body

    include ./Components/navbar.jade

    nav(aria-label='breadcrumb')
        ol.breadcrumb
            li.breadcrumb-item
                a(href='/') Inicio
            li.breadcrumb-item
                a(href='direccionAcademica') Direccion Academica
            li.breadcrumb-item.active(aria-current='page') Periodos
    .container-fluid
        .col-md-12
            h1.display-6.text-center
                b Periodos
            hr(style='border:1px solid #dae0e5;')
            .row.justify-content-md-center.main_regEmpleado
                .col-md-12(style=' padding: 20px;')
                    .form-group.row.text-center
                        .col-sm-12
                            button.btn.btn-success.btn-lg(type='button', onclick='removerValidacionesPeriodo()', data-toggle='modal', data-target='#registrarPeriodo')
                                i.fa.fa-user-plus
                                |  Registrar
                #reg_Estudiante.col-md-12
                    table#tbl-periodos.table.table-striped.table-bordered(style='width:100%')
                        thead
                            tr
                                th #
                                th Nombre
                                th Fecha Inicial
                                th Fecha Final
                                th Tipo Periodo
                        tbody
    #registrarPeriodo.modal.fade
        .modal-dialog
            .modal-content
                // Modal Header
                .modal-header
                    h4.modal-title Agregar Periodo
                    button.close(type='button', data-dismiss='modal') Ã—
                // Modal body
                .modal-body
                    form
                        .form-group
                            label(for='txt-nombrePeriodo') Nombre Periodo
                            input#txt-nombrePeriodo.form-control(type='text', placeholder='Escriba el nombre')
                            .valid-feedback Correcto
                            .invalid-feedback Escriba el nombre del Periodo
                        .form-group
                            label(for='txt-inicioPeriodo') Fecha Inical
                            input#txt-inicioPeriodo.form-control(type='date')
                            .valid-feedback Correcto
                            .invalid-feedback Seleccione la Fecha Inical del Periodo
                        .form-group
                            label(for='txt-finalPeriodo') Fecha Final
                            input#txt-finalPeriodo.form-control(type='date')
                            .valid-feedback Correcto
                            .invalid-feedback Seleccione la Fecha Inical del Periodo
                        .form-group
                            label(for='select-tipoPeriodo') Tipo de Periodo
                            select#select-tipoPeriodo.custom-select
                                option(value='0', selected='') Seleccione el tipo de Periodo
                            .valid-feedback Correcto
                            .invalid-feedback Seleccione el Tipo de Periodo
                // Modal footer
                .modal-footer
                    div(style='text-align: center;')
                    button.btn.btn-danger(type='button', data-dismiss='modal') Close
                    button#btn_registrarPeriodo.btn.btn-primary(onclick='guardarPeriodo()', type='button') Registrar Periodo


    include ./Components/footer.jade

    script(src='./js/jquery-3.3.1.min.js')
    script(src='./js/popper.min.js')
    script(src='./js/bootstrap.min.js')
    script(src='./js/ControladorDir_Academica.js') 