doctype html
html
  head
    title Registro de Aulas
    meta(charset='utf-8')
    link(rel='icon', href='./img/favicon.jpg', type='image/jpg')
    link(rel='stylesheet', href='./css/bootstrap.min.css')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')
    link(rel='stylesheet', href='./css/misestilos.css')
    link(href='https://fonts.googleapis.com/css?family=Marcellus+SC', rel='stylesheet')
    link(href='https://fonts.googleapis.com/css?family=Chicle', rel='stylesheet')
    link(href='https://fonts.googleapis.com/css?family=Amatic+SC', rel='stylesheet')
  body

    include ./Components/navbar.jade

    nav(aria-label='breadcrumb')
        ol.breadcrumb
            li.breadcrumb-item
                a(href='/') Inicio
            li.breadcrumb-item
                a(href='seapi') SEAPI
            li.breadcrumb-item.active(aria-current='page') Aulas
    .container-fluid
        .col-md-12
            h1.display-6.text-center
                b Aulas
            hr(style='border:1px solid #dae0e5;')
            .row.justify-content-md-center.main_regEmpleado
                .col-md-12(style=' padding: 20px;')
                    .form-group.row.text-center
                        .col-sm-12
                            button.btn.btn-success.btn-lg(type='button', onclick='removerValidacionesAula()', data-toggle='modal', data-target='#registrarAula')
                                i.fa.fa-user-plus
                                |  Registrar
                #reg_Estudiante.col-md-12
                    .row.justify-content-md-center
                        .col-md-8
                            table#table-aulas.table.table-striped.table-bordered
                                thead
                                    tr
                                        th #
                                        th Numero Aula
                                        th Tipo Aula
                                        th Edificio
                                        th Campus
                                tbody
    #registrarAula.modal.fade
        .modal-dialog
            .modal-content
                // Modal Header
                .modal-header
                    h4.modal-title Agregar Aula
                    button.close(type='button', data-dismiss='modal') Ã—
                // Modal body
                .modal-body
                    form
                        .form-group
                            label(for='txt-numeroAula') Numero de la aula
                            input#txt-numeroAula.form-control(type='text', placeholder='Escriba el numero')
                            .valid-feedback Correcto
                            .invalid-feedback Escriba el numero de Aula
                        .form-group
                            label(for='select-tipoAula') Tipo de Aula
                            select#select-tipoAula.custom-select
                                option(value='0', selected='') Seleccione el tipo de aula
                            .valid-feedback Correcto
                            .invalid-feedback Seleccione el Tipo de Aula
                        .form-group
                            label(for='select-edificio') Edificio
                            select#select-edificio.custom-select
                                option(value='0', selected='') Seleccione el Edificio
                            .valid-feedback Correcto
                            .invalid-feedback Seleccione el Edificio
                // Modal footer
                .modal-footer
                    div(style='text-align: center;')
                    button.btn.btn-danger(type='button', data-dismiss='modal') Close
                    button#btn_registrarAula.btn.btn-primary(onclick='guardarula()', type='button') Registrar Aula

    include ./Components/footer.jade

    script(src='./js/jquery-3.3.1.min.js')
    script(src='./js/popper.min.js')
    script(src='./js/bootstrap.min.js')
    script(src='./js/ControladorSeapi.js') 